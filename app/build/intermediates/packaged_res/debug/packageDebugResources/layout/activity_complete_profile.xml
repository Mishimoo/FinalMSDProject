<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Image Placeholder -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/default_profile"
            android:contentDescription="Profile Image"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true" />

        <!-- First Name -->
        <EditText
            android:id="@+id/firstNameInput"
            android:hint="First Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <!-- Last Name -->
        <EditText
            android:id="@+id/lastNameInput"
            android:hint="Last Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/selectProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Profile Picture (Optional)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- profile pic options -->
        <GridLayout
            android:id="@+id/avatarGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="2"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginTop="-25dp">

            <ImageView
                android:id="@+id/avatar1"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                android:src="@drawable/avatar1"
                android:background="@drawable/avatar_border_unselected"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/avatar2"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                android:src="@drawable/avatar2"
                android:background="@drawable/avatar_border_unselected"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/avatar3"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                android:src="@drawable/avatar3"
                android:background="@drawable/avatar_border_unselected"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/avatar4"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                android:src="@drawable/avatar4"
                android:background="@drawable/avatar_border_unselected"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/avatar5"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                android:src="@drawable/avatar5"
                android:background="@drawable/avatar_border_unselected"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/avatar6"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                android:src="@drawable/avatar6"
                android:background="@drawable/avatar_border_unselected"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />
        </GridLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/completeProfileBtn"
            android:text="Complete Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>