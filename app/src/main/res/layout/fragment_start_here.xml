<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/startHereTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Start Here"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/btnWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Page" />

        <Button
            android:id="@+id/btnSyllabus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SYLLABUS" />

        <Button
            android:id="@+id/btnLabInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lab Report Instruction" />

        <Button
            android:id="@+id/btnProjectInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Instructions" />
    </LinearLayout>
</ScrollView>